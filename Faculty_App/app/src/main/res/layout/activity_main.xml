<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF5D3">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#B34DBA29"
            android:theme="@style/ThemeOverlay.MaterialComponents.ActionBar"
            app:title="Выберите таблицу с данными"
            app:titleTextColor="#852E2C1B" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <Button
            android:id="@+id/button_users"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Список пользователей"
            android:backgroundTint="#B34DBA29"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />
        <Button
            android:id="@+id/button_teachers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Список преподавателей"
            android:backgroundTint="#B34DBA29"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />
        <Button
            android:id="@+id/button_departments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Список кафедр"
            android:backgroundTint="#B34DBA29"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />


    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

